{
  "name": "ck-search",
  "displayName": "ck - Semantic Code Search",
  "description": "Hybrid semantic + keyword code search powered by ck",
  "version": "0.1.0",
  "publisher": "beacon-bay",
  "license": "Apache-2.0 OR MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/beacon-biosignals/ck.git",
    "directory": "ck-vscode"
  },
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "search",
    "semantic",
    "code search",
    "ck",
    "grep"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ck.search",
        "title": "ck: Search",
        "icon": "$(search)"
      },
      {
        "command": "ck.searchSelection",
        "title": "ck: Search Selection",
        "icon": "$(find-selection)"
      },
      {
        "command": "ck.reindex",
        "title": "ck: Reindex",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ck-search-container",
          "title": "ck Search",
          "icon": "resources/ck-icon.svg"
        }
      ]
    },
    "views": {
      "ck-search-container": [
        {
          "type": "webview",
          "id": "ck.searchView",
          "name": "Search"
        }
      ]
    },
    "keybindings": [
      {
        "command": "ck.search",
        "key": "ctrl+shift+;",
        "mac": "cmd+shift+;"
      },
      {
        "command": "ck.searchSelection",
        "key": "ctrl+shift+'",
        "mac": "cmd+shift+'"
      }
    ],
    "configuration": {
      "title": "ck Search",
      "properties": {
        "ck.mode": {
          "type": "string",
          "enum": ["cli", "mcp"],
          "default": "cli",
          "description": "Integration mode: CLI (spawn binary) or MCP (connect to server)"
        },
        "ck.cliPath": {
          "type": "string",
          "default": "ck",
          "description": "Path to ck binary"
        },
        "ck.mcp.command": {
          "type": "string",
          "default": "ck",
          "description": "MCP server command"
        },
        "ck.mcp.args": {
          "type": "array",
          "default": ["--serve"],
          "description": "MCP server arguments"
        },
        "ck.index.root": {
          "type": "string",
          "default": "${workspaceFolder}",
          "description": "Root folder for indexing"
        },
        "ck.defaultMode": {
          "type": "string",
          "enum": ["hybrid", "semantic", "regex"],
          "default": "semantic",
          "description": "Default search mode"
        },
        "ck.pageSize": {
          "type": "number",
          "default": 25,
          "description": "Number of results to display at once"
        },
        "ck.threshold": {
          "type": "number",
          "default": 0.6,
          "description": "Minimum relevance threshold for hybrid/semantic search (0.0-1.0)"
        },
        "ck.topK": {
          "type": "number",
          "default": 50,
          "description": "Maximum number of results to fetch from ck (higher = more results but slower)"
        },
        "ck.contextLines": {
          "type": "number",
          "default": 4,
          "minimum": 0,
          "maximum": 20,
          "description": "Number of lines of context to show before and after each match (0-20)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.0",
    "@vscode/vsce": "^2.24.0"
  },
  "dependencies": {
    "jsonrpc-lite": "^2.2.0"
  }
}
